<div id="myCarousel" class="carousel slide hidden-xs hidden-sm hidden-md">
  <div class="carousel-inner">
    <div class="item active">
      <div class="vertical-center">
        <img class="carousel-image" src="/assets/avignon_nudes.jpg" alt="First slide">
      </div>
    </div>
    <% Dir.glob('app/assets/images/nudes/*').map do |path| %>
      <div class="item">
        <div class="vertical-center">
          <%= image_tag "/assets/nudes/#{File.basename(path)}", alt: "image slide", class:"carousel-image" %>
        </div>
      </div>
    <% end.reduce(&:+) %>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" href="#myCarousel"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

